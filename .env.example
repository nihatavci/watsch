# TMDB API - Get yours at https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_ACCESS_TOKEN=your_tmdb_access_token_here

# OpenAI API - Get yours at https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# YouTube API - Get yours at https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Rapid API - Get yours at https://rapidapi.com/
RAPID_API_KEY=your_rapid_api_key_here

# OMDB API - Get yours at https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=your_omdb_api_key_here

# DeepSeek API - Optional for advanced features
PRIVATE_DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Auth0 Configuration - Get yours at https://auth0.com/
AUTH0_DOMAIN=your_auth0_domain
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Node Version
NODE_VERSION=20.x

# SvelteKit Environment Variables - For backward compatibility
# These are optional and used as fallbacks
PRIVATE_TMDB_API_KEY=your_tmdb_api_key_here
PRIVATE_OPENAI_API_KEY=your_openai_api_key_here